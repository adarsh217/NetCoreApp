<Window x:Class="WpfApp3.SalesReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Reports" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="StartDatePicker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="EndDatePicker" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Generate Report" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" Width="100" Click="GenerateReportButton_Click"/>
        <DataGrid x:Name="ReportDataGrid" HorizontalAlignment="Left" Height="300" Margin="10,45,0,0" VerticalAlignment="Top" Width="760"/>
    </Grid>
</Window>
