<Window x:Class="WpfApp3.SalesManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sales Management" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="CartDataGrid" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="760"/>
        <TextBox x:Name="ProductIdTextBox" HorizontalAlignment="Left" Height="23" Margin="10,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="QuantityTextBox" HorizontalAlignment="Left" Height="23" Margin="135,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add to Cart" HorizontalAlignment="Left" Margin="260,225,0,0" VerticalAlignment="Top" Width="75" Click="AddToCartButton_Click"/>
        <Button Content="Remove from Cart" HorizontalAlignment="Left" Margin="340,225,0,0" VerticalAlignment="Top" Width="115" Click="RemoveFromCartButton_Click"/>
        <Button Content="Process Sale" HorizontalAlignment="Left" Margin="460,225,0,0" VerticalAlignment="Top" Width="75" Click="ProcessSaleButton_Click"/>
    </Grid>
</Window>
